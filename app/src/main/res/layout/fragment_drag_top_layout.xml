<?xml version="1.0" encoding="utf-8"?>
<github.chenupt.dragtoplayout.DragTopLayout
    android:id="@+id/drag_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:dtlOverDrag="false"
    app:dtlCaptureTop="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--top view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:background="@color/purple"
        android:gravity="center"
        android:orientation="vertical">

        <com.dots.focus.util.AvenirNextULTextView
            android:id="@+id/text"
            android:layout_gravity="center_horizontal"
            android:layout_margin="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Top View"
            android:textSize="22dp"
            app:AvenirNext_UltraLight="AvenirNext_UltraLight.ttf"/>
    </LinearLayout>

    <!--content view-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            app:pstsShouldExpand="true"
            app:pstsIndicatorColor="@color/blue_tab_indicator"
            android:textColor="@color/white_semi"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#10FFFFFF" />
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>

</github.chenupt.dragtoplayout.DragTopLayout>