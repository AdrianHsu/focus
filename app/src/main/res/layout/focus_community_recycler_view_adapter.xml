<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="0dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:src="@drawable/adrian"
            android:layout_width="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/user_name"
            android:text="許秉鈞"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/time"
            android:text="3天前"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:id="@+id/content"
            android:text="我覺得怎樣怎樣改會更好我覺得怎樣怎樣改會更好我覺得怎樣怎樣改會更好我覺得怎樣怎樣改會更好我覺得怎樣怎樣改會更好我覺得怎樣怎樣改會更好..."
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/push_up"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_heart_outline_white"
            android:layout_below="@+id/content"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/push_up"
            android:layout_toEndOf="@+id/push_up">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:id="@+id/points"
                android:textSize="14dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points"
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/push_up"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:id="@+id/comment"
            android:textSize="14dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comments"
                android:textSize="14dp"
                />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>