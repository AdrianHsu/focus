<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@drawable/bg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameToolbar"
        android:background="@color/transparent"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="2dp"
        android:padding="0dp"
        android:background="@drawable/cover_photo"/>

    <include layout="@layout/post_item"
             android:padding="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Write a message..."
        android:textSize="18sp"
        app:met_baseColor="@color/white"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true"
        app:met_helperText=""
        app:met_helperTextAlwaysShown="false"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/sendButton"

        android:layout_alignParentEnd="true"/>
    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/inbox_edit_send"
        android:id="@+id/sendButton"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>