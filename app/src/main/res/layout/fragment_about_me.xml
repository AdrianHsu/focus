<?xml version="1.0" encoding="utf-8"?>
<com.gc.materialdesign.views.ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <com.dots.focus.util.AvenirNextItalicTextView
                android:id="@+id/bioTv"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textSize="22dp"
                android:textColor="@color/white"
                app:AvenirNext_Italic="AvenirNext_Italic.ttf"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
            <com.dots.focus.util.AvenirNextItalicTextView
                android:id="@+id/BioResultTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="16dp"
                android:textColor="@color/semi_white"
                app:AvenirNext_Italic="AvenirNext_Italic.ttf"
                android:layout_gravity="right"
                android:layout_alignEnd="@+id/bioTv"/>
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/semi_transparent"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <com.dots.focus.util.AvenirNextItalicTextView
                android:id="@+id/colorTv"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="My Color"
                android:textSize="22dp"
                android:textColor="@color/white"
                app:AvenirNext_Italic="AvenirNext_Italic.ttf"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
            <com.dots.focus.util.AvenirNextItalicTextView
                android:id="@+id/colorResultTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blue (#4EB1CB)"
                android:textSize="16dp"
                android:textColor="@color/semi_white"
                app:AvenirNext_Italic="AvenirNext_Italic.ttf"
                android:layout_gravity="right"
                android:layout_alignEnd="@+id/colorTv"/>
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/semi_transparent"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <com.dots.focus.util.AvenirNextItalicTextView
            android:id="@+id/genderTv"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Gender"
            android:textSize="22dp"
            android:textColor="@color/white"
            app:AvenirNext_Italic="AvenirNext_Italic.ttf"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <com.dots.focus.util.AvenirNextItalicTextView
            android:id="@+id/genderResultTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="16dp"
            android:textColor="@color/semi_white"
            app:AvenirNext_Italic="AvenirNext_Italic.ttf"
            android:layout_gravity="right"
            android:layout_alignEnd="@+id/genderTv"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/semi_transparent"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <com.dots.focus.util.AvenirNextItalicTextView
            android:id="@+id/emailTv"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="22dp"
            android:textColor="@color/white"
            app:AvenirNext_Italic="AvenirNext_Italic.ttf"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <com.dots.focus.util.AvenirNextItalicTextView
            android:id="@+id/emailResultTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adrianhsu1995@gmail.com"
            android:textSize="16dp"
            android:textColor="@color/semi_white"
            app:AvenirNext_Italic="AvenirNext_Italic.ttf"
            android:layout_gravity="right"
            android:layout_alignEnd="@+id/emailTv"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/semi_transparent"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <com.dots.focus.util.AvenirNextItalicTextView
            android:id="@+id/birthTv"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Year Of Birth"
            android:textSize="22dp"
            android:textColor="@color/white"
            app:AvenirNext_Italic="AvenirNext_Italic.ttf"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <com.dots.focus.util.AvenirNextItalicTextView
            android:id="@+id/birthResultTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1995"
            android:textSize="16dp"
            android:textColor="@color/semi_white"
            app:AvenirNext_Italic="AvenirNext_Italic.ttf"
            android:layout_gravity="right"
            android:layout_alignEnd="@+id/birthTv"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/semi_transparent"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <com.dots.focus.util.AvenirNextItalicTextView
                android:id="@+id/occupationTv"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Occupation"
                android:textSize="22dp"
                android:textColor="@color/white"
                app:AvenirNext_Italic="AvenirNext_Italic.ttf"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
            <com.dots.focus.util.AvenirNextItalicTextView
                android:id="@+id/occupationResultTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undergraduate"
                android:textSize="16dp"
                android:textColor="@color/semi_white"
                app:AvenirNext_Italic="AvenirNext_Italic.ttf"
                android:layout_gravity="right"
                android:layout_alignEnd="@+id/occupationTv"/>
        </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/semi_transparent"/>
    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:background="@color/white"
        android:text="SAVE"/>
</LinearLayout>

</com.gc.materialdesign.views.ScrollView>
